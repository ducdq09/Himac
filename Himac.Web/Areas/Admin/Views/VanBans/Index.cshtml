@model IEnumerable<Himac.Model.Models.VanBan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    tbody tr td {
        vertical-align: middle;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1> Văn bản <small> </small></h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
        <li><a href="#">Văn bản</a></li>
        <li class="active">Index</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <p class="pull-left">
                        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                    </p>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="display table table-bordered table-striped table-condensed table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenVanBan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LinhVuc.TenLinhVuc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LoaiVanBan.TenLoaiVanBan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NgayBanHanh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoHieu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NgayDangCongBao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApDung)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TinhTrangHieuLuc)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int rowNo = 0;}
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="text-align: center; vertical-align: middle">@{rowNo++;} @rowNo</td>
                                <td style="vertical-align: middle; max-width: 400px">
                                    @Html.DisplayFor(modelItem => item.TenVanBan)
                                </td>
                                <td style="vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.LinhVuc.TenLinhVuc)
                                </td>

                                <td style="vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.LoaiVanBan.TenLoaiVanBan)
                                </td>
                                <td style="text-align: center; vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.NgayBanHanh)
                                </td>
                                <td style="text-align: center; vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.SoHieu)
                                </td>
                                <td style="vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.NgayDangCongBao)
                                </td>
                                <td style="vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.ApDung)
                                </td>
                                <td style="vertical-align: middle">
                                    @Html.DisplayFor(modelItem => item.TinhTrangHieuLuc)
                                </td>
                                <td style="text-align: center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-info btn-flat">Tác vụ</button>
                                        <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>@Html.ActionLink("Xem chi tiết", "Details", new { id = item.VanBanId })</li>
                                            <li>@Html.ActionLink("Sửa", "Edit", new { id = item.VanBanId })</li>
                                            <li>@Html.ActionLink("Xóa", "Delete", new { id = item.VanBanId })</li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenVanBan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LinhVuc.TenLinhVuc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LoaiVanBan.TenLoaiVanBan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NgayBanHanh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoHieu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NgayDangCongBao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ApDung)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TinhTrangHieuLuc)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
