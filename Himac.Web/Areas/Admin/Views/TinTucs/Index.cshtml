@model IEnumerable<Himac.Model.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    tbody tr td {
        vertical-align: middle;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1> Tin tức <small> </small></h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
        <li><a href="#">Tin tức</a></li>
        <li class="active">Index</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <p class="pull-left">
                        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                    </p>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="display table table-bordered table-striped table-condensed table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LoaiTinTuc.TenLoaiTinTuc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TieuDe)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImagePath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int rowNo = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align: center; vertical-align: middle">@{rowNo++;} @rowNo</td>
                                    <td style="vertical-align: middle">
                                        @Html.DisplayFor(modelItem => item.LoaiTinTuc.MaLoaiTinTuc)
                                    </td>
                                    <td style="vertical-align: middle">
                                        @Html.DisplayFor(modelItem => item.TieuDe)
                                    </td>
                                    <td style="vertical-align: middle; max-width: 400px">
                                        @{
                                            var vContent = item.Content;
                                            if (vContent.Length > 300)
                                            {
                                                vContent = vContent.Substring(0, 300);
                                            }

                                            <span>@vContent</span>
                                        }
                                    </td>
                                    <td  style="text-align: center; vertical-align: middle">
                                        <img src="@Url.Content(item.ImagePath)" width="50" height="50" multiple />
                                    </td>
                                    <td style="vertical-align: middle">
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td style="vertical-align: middle">
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </td>
                                    <td style="vertical-align: middle">
                                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                                    </td>
                                    <td style="vertical-align: middle">
                                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td style="text-align: center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-info btn-flat">Tác vụ</button>
                                            <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
                                                <span class="caret"></span>
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li>@Html.ActionLink("Xem chi tiết", "Details", new { id = item.TinTucId })</li>
                                                <li>@Html.ActionLink("Sửa", "Edit", new { id = item.TinTucId })</li>
                                                <li>@Html.ActionLink("Xóa", "Delete", new { id = item.TinTucId })</li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LoaiTinTuc.TenLoaiTinTuc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TieuDe)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Content)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImagePath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedBy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
